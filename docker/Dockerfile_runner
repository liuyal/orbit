# Dockerfile for GitHub Actions Self-Hosted Runner
FROM debian:bullseye-slim

# Maintainer information
LABEL maintainer="jerry"

# Set working directory
WORKDIR /home/runner

# Create a user for the runner first and install dependencies in one layer
ARG RUNNER_VERSION="2.320.0"
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    curl \
    git \
    jq \
    ca-certificates \
    sudo && \
    useradd -m -s /bin/bash runner && \
    usermod -aG sudo runner && \
    echo "runner ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers && \
    curl -o actions-runner-linux-x64-${RUNNER_VERSION}.tar.gz -L \
    https://github.com/actions/runner/releases/download/v${RUNNER_VERSION}/actions-runner-linux-x64-${RUNNER_VERSION}.tar.gz && \
    tar xzf actions-runner-linux-x64-${RUNNER_VERSION}.tar.gz && \
    rm actions-runner-linux-x64-${RUNNER_VERSION}.tar.gz && \
    chown -R runner:runner /home/runner && \
    ./bin/installdependencies.sh && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Copy the startup script and fix line endings
COPY --chown=runner:runner start-runner.sh /home/runner/start-runner.sh
RUN sed -i 's/\r$//' /home/runner/start-runner.sh && \
    chmod +x /home/runner/start-runner.sh

# Switch to runner user
USER runner
WORKDIR /home/runner

# Set environment variables (to be overridden at runtime)
ENV GITHUB_OWNER=""
ENV GITHUB_REPOSITORY=""
ENV GITHUB_TOKEN=""
ENV RUNNER_NAME="runner"
ENV RUNNER_WORKDIR="_work"
ENV RUNNER_LABELS="docker"

# Start the runner
CMD ["/home/runner/start-runner.sh"]
